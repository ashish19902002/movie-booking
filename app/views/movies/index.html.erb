<h1>Movie</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cast</th>
      <th>Description</th>
      <th>Duration</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.cast %></td>
        <td><%= movie.description %></td>
        <td><%= movie.duration %> Minutes</td>
        <td><%= link_to 'Show Theater', screens_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>